
<h1 class="text-center">Add Book</h1>

<form asp-controller="Dashboard" asp-action="AddBook" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <div class="form-group">
        <label>Book name</label>
        <input class="form-control" name="BookName"/>
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image Url</label>
        <input class="form-control" name="imageUrl" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" step=".01" name="price" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Author name</label>
        <input name="author" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Genre</label>
        <input name="genre" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>IsFree</label>
        <input type="checkbox" name="type" placeholder="IsFree" />
    </div>

    <div class="form-group">
        <label>Upload file</label>
        <input type="file" class="form-control" value=".txt file" name="body">
        <span class="text-danger"></span>
    </div>

    <input class="btn btn-dark" type="submit" value="Add" />
</form>