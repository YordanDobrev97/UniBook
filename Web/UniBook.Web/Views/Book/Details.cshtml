@using UniBook.Web.ViewModels
@model DetailsBookViewModel 

<div id="container">
    <div class="product-details">
        <h1>@Model.Name</h1>
        <div>
            <p>@Model.Description</p>
        </div>

        <div class="control">
            <button class="btn">
                <span class="price">FREE</span>
                <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                <span class="buy"></span>
                <a class="btn btn-info" asp-controller="Book" asp-action="ReadBook" asp-route-id="@Model.BookId">Чети онлайн</a>
            </button>

            <button type="button" class="btn btn-success" 
                    onclick="likeBook()">Харесва ми</button>
        </div>
    </div>

    <div class="product-image">
        <img src="@Model.ImageUrl" alt="BookImage">
    </div>
</div>

<script>
    const bookId = @Html.Raw(Json.Serialize(Model.BookId));
    const userId = @Html.Raw(Json.Serialize(Model.UserId));

    function likeBook() {
        const data = {
            bookId: bookId,
            userId: userId
        };

        const jsonData = JSON.stringify(data);

        $.ajax({
            url: '/api/Users/Book',
            method: 'POST',
            data: jsonData,
            contentType: 'application/json',
        });
    }
</script>