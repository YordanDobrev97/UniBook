@using UniBook.Web.ViewModels.Friends
@model ChatViewModel

<link href="~/css/chat.css" rel="stylesheet" asp-append-version="true"/>

<div class="container-fluid h-100">
    <div class="row justify-content-center h-100">
        <div class="col-md-8 col-xl-6 chat">
            <div class="card">
                <div class="card-header msg_head">
                    <div class="d-flex bd-highlight">
                        <div class="user_info">
                            <span>Чат</span>
                        </div>
                    </div>
                </div>
                <div class="card-body msg_card_body">
                    <div id="first" class="d-flex justify-content-end mb-4"></div>
                    <div id="second" class="d-flex justify-content-start mb-4"></div>
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <input class="textarea" type="text" placeholder="Напиши съобщение" />
                        <button id="sendButton" class="ml-4 btn btn-dark btn-lg">Изпрати</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var connection =
            new signalR.HubConnectionBuilder()
                .withUrl("/chat")
                .build();

        connection.on("NewMessage",
            function (message) {
                var user = @Html.Raw(Json.Serialize(User.Identity.Name));
                const currentRow = message.user == user ? "first": "second";
                var chatInfo = `<div>${escapeHtml(message.text)}</div>` + '\n';

                $(`#${currentRow}`).append(chatInfo);
            });


        $("#sendButton").click(function () {
            var message = $(".textarea").val();
            var recipient = @Html.Raw(Json.Serialize(Model.UserId));
            console.log(message);
            connection.invoke("Send", message, recipient);
            $(".textarea").val("");
        });
        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
        function escapeHtml(unsafe) {
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
    </script>
}