@model DetailsPostViewModel

<div class="card border-success mb-3 w-100">
    <div class="card-header text-justify text-dark">@Model.Title</div>
    <div class="card-body text-dark">
        <p class="card-text">@Model.Content</p>
    </div>

    <div class="card-footer text-danger">@Model.Author</div>
</div>

<a class="btn btn-primary">Добави коментар</a>

<ul class="list-group">
    @foreach (var comment in Model.Comments)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">@comment.CommentBody
            <span class="badge badge-primary badge-pill">@comment.UserName</span>
        </li>
    }
</ul>