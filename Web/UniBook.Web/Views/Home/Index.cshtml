@using UniBook.Web.ViewModels

@model List<ListAllBooksViewModel>

@{ this.ViewData["Title"] = "Home Page"; }

<main class="main-content">
    <div class="container">
        <form class="form-inline mr-auto">
            <input class="form-control mr-sm-2 input-lg" type="text" aria-label="Search">
            <button class="btn btn-lg blue-gradient btn-rounded btn-sm my-0" type="submit">Търсене</button>
        </form>

        <div class="page">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-2 m-2">
                        <img class="d-inline" src=@item.ImageUrl alt="Movie 1">
                        @*<button class="btn-detail">Детайли</button>*@
                        <a asp-action="Details" asp-controller="Book" asp-route-id=@item.Id class="btn btn-info btn-lg">Детайли</a>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

