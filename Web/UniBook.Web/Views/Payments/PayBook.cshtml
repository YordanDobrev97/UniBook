@model BookDetailsViewModel

@{
    this.Layout = null;
}

<link href="~/css/payments.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<script src="~/js/payments.js"></script>

<div class="container">
    <div id="Checkout" class="inline">
        <h1>Плащане</h1>
        <div class="card-row">
            <span class="visa"></span>
            <span class="mastercard"></span>
            <span class="amex"></span>
            <span class="discover"></span>
        </div>
        <p>Купуване на: @Model.Name</p>
        <form method="post" asp-controller="Payments" asp-action="Charge">
            <div class="form-group">
                <label for="PaymentAmount">Цена</label>
                <div class="amount-placeholder">
                    <span>@Model.Price</span>
                    <span>лв.</span>
                </div>
            </div>
            <div class="form-group">
                <label or="NameOnCard">Име на картата</label>
                <input id="NameOnCard" name="customerName" class="form-control" type="text" maxlength="255" />
            </div>
            <div class="form-group">
                <label for="CreditCardNumber">Номер на карта</label>
                <input id="CreditCardNumber" name="cardNumber" class="null card-image form-control" type="text" />
            </div>
            <div class="expiry-date-group form-group">
                <label for="ExpiryDate">Срок на годност</label>
                <input id="ExpiryDate" name="Expiration" class="form-control" type="text" placeholder="MM / YY" maxlength="7" />
            </div>
            <div class="security-code-group form-group">
                <label for="SecurityCode">Код за сигурност</label>
                <div class="input-container">
                    <input id="SecurityCode" name="SecurityCode" class="form-control" type="text" />
                    <i id="cvc" class="fa fa-question-circle"></i>
                </div>
                <div class="cvc-preview-container two-card hide">
                    <div class="amex-cvc-preview"></div>
                    <div class="visa-mc-dis-cvc-preview"></div>
                </div>
            </div>
            <div class="zip-code-group form-group">
                <label for="ZIPCode">ZIP/Пощенски код</label>
                <div class="input-container">
                    <input id="ZIPCode" name="zipCode" class="form-control" type="text" maxlength="10" />
                    <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-placement="left" data-content="Enter the ZIP/Postal code for your credit card billing address."><i class="fa fa-question-circle"></i></a>
                </div>
            </div>

            <input hidden="hidden" name="BookName" value="@Model.Name" />
            <input hidden="hidden" name="Price" value="@Model.Price" />

            <input hidden="hidden" name="bookId" value="@Model.BookId" />
            <input hidden="hidden" name="userId" value="@Model.UserId" />

            <button id="PayButton" class="btn btn-block btn-success submit-button" type="submit">
                <span class="submit-button-lock"></span>
                <span class="align-middle">Плати</span>
            </button>
        </form>
    </div>
</div>